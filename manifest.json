{
  "manifest_version": 3,
  "name": "Twitter Auto-Engagement",
  "version": "1.0.0",
  "description": "Automate Twitter engagement with AI-powered comments and human-like behavior",

  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://openrouter.ai/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Twitter Auto-Engagement"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}